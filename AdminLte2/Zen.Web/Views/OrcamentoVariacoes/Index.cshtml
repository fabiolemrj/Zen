@model Zen.Web.ViewModels.OrcamentoVariacoesViewModel.IndexViewModel

@using (Html.BeginForm("Index", "OrcamentoVariacoes", FormMethod.Get, new { id = "formOrcVar" }))
{
    @Html.AntiForgeryToken()
    @Html.AntiForgeryToken()
    <div class="result"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h4>Assinaturas / Variações</h4>
                </div>
                
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label">Pedido: @Model.Idpedido</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Item: @Model.Item</label>
                    </div>
                    <table id="tabela" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Numero</th>
                                <th class="text-center">Especificação</th>
                                <th class="text-center">Quantidade</th>
                                <th class="text-center">Localização</th>
                                <th class="text-center" style="width:100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstOrcVariacoes)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NrSeq)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Variacao)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Quant)
                                    </td>
                                    <td>
                                        @if (item.Local == "F")
                                        {
                                            @Html.Raw("Frente")
                                        }
                                        else
                                        {
                                            @Html.Raw("Verso")
                                        }
                                        @*@Html.DisplayFor(modelItem => item.Local)*@
                                    </td>

                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Edit",new { idpedido=item.IdPedido, item = item.Item, nrseq = item.NrSeq})" class="btn btn-info btn-sm" title="Editar">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            <a href="@Url.Action("Delete",new { idpedido=item.IdPedido, item = item.Item, nrseq = item.NrSeq})" class="btn btn-danger btn-sm" title="Apagar">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
