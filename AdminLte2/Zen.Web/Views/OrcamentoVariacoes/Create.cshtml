
@model Zen.Web.ViewModels.OrcamentoVariacoesViewModel.CreateEditViewModel

@{ ViewBag.Title = "Item de variação do Pedido de Orçamento";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">
                    @if (@TempData["lboper"] != null)
                    {
                        @Html.Raw(@TempData["lboper"]);
                    }
                </h3>
            </div>

            <div class="box-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.IdPedido)
                    @Html.HiddenFor(model => model.Item)
                    <div class="form-group">
                        <label class="control-label col-md-2">Variação</label>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.Variacao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Variacao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Local</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(model => model.Local, (SelectList)ViewBag.LocalVariacao, new { @class = "form-control select2" })

                            @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Quantidade</label>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Quant, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Quant, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="box box-footer">
                        <div class="btn">
                            <button type="submit" id="btsalvar" class="btn btn-app ">
                                <i class="fa fa-save"></i> Salvar
                            </button>
                            <a href="@Url.Action("Index","OrcamentoVariacoes/Index",new { idpedido = Model.IdPedido,item = Model.Item}) " class="btn btn-app " title="Salvar">
                                <i class="fa fa-arrow-circle-o-left"></i> Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}