<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function () {

        $('#dtini').mask('00/00/0000', { placeholder: "dd/mm/aaaa" });
        $('#dtfim').mask('00/00/0000', { placeholder: "dd/mm/aaaa" });

        //Date picker
        $('#dtini').datepicker({
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "pt-BR"
        })

        //Date picker
        $('#dtfim').datepicker({
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "pt-BR"
        })

    });
</script>