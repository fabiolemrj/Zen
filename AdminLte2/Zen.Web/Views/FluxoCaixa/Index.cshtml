<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
@using X.PagedList.Mvc
@model X.PagedList.PagedList<Zen.Web.Models.FluxoCaixa>

@{
    ViewBag.Title = "Fluxo de Caixa";
}


@using (Html.BeginForm("Index", "FluxoCaixa", FormMethod.Get, new { id = "formFluxoCaixa" }))
{
    @Html.AntiForgeryToken()
    <div class="result"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Pesquisa por Período de Vencimento</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <div class="col-md-6">
                                        Data Inicial
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="datetime" class="form-control pull-right" id="dtini" name="dtini" placeholder="Data Inicio" value="@ViewBag.dtini" />
                                        </div>
                                        @* <input type="datetime" class="form-control pull-right" id="dtini" name="dtini" placeholder="Data Inicio" value="@ViewBag.Dtini" />*@
                                    </div>
                                    <div class="col-md-6">
                                        Data Final
                                        @*<input type="datetime" class="form-control" id="dtfim" name="dtfim" placeholder="Data Fim" value="@ViewBag.Dtfim" />*@
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="datetime" class="form-control pull-right" id="dtfim" name="dtfim" placeholder="Data Final" value="@ViewBag.dtfim" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-8">
                                    <div class="col-md-6">
                                        <label>Sentido</label>
                                        <select name="sentido" id="sentido" class="form-control select2-dropdown">
                                            <option value="T" @(ViewBag.situacao == "T" ? "selected" : "")>Todos</option>
                                            <option value="C" @(ViewBag.situacao == "C" ? "selected" : "")>Crédito</option>
                                            <option value="D" @(ViewBag.situacao == "D" ? "selected" : "")>Débito</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-9">
                                    <div class="col-md-3">
                                        <label class="control-label">Créditos (+)</label>
                                        <input type="text" class="form-control" id="saldocp" name="saldocp" readonly="readonly" value="@ViewBag.saldocr" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="control-label">Débitos (-)</label>
                                        <input type="text" class="form-control" id="saldocr" name="saldocr" readonly="readonly" value="@ViewBag.saldocp" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="control-label">Saldo Total (=)</label>
                                        <input type="text" class="form-control" id="saldocr" name="saldotot" readonly="readonly" value="@ViewBag.saldotot" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-block btn-info">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-body">
                    <table id="tabela" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Data</th>
                                <th class="text-center">Tipo de Documento</th>
                                <th class="text-center">Forma de pagamento</th>
                                <th class="text-center">Histórico</th>
                                <th class="text-center">Fornecedor/Cliente</th>
                                <th class="text-center">Valor</th>
                                <th class="text-center">Sentido</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DtVenc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoDocumento.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Formapag.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Historico)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FornecCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>

                                    @if (item.Sentido == "C")
                                    {
                                        <td class="bg-primary">

                                            @Html.Raw("Crédito")
                                        </td>
                                    }
                                    else if (item.Sentido == "D")
                                    {
                                        <td class="bg-danger">
                                            @Html.Raw("Débito")
                                        </td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, dtini = ViewBag.dtini, dtfim = ViewBag.dtfim, sentido = ViewBag.Sentido,
                         saldocr = ViewBag.saldocr, saldocp = ViewBag.saldocp, saldotot = ViewBag.saldotot }))

        </div>
        <div class="col-md-6">
            <span class="pull-right">
                Listando registros de @Model.FirstItemOnPage a @Model.LastItemOnPage de um total de @Model.TotalItemCount
            </span>
        </div>
    </div>

}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>

<script>
    $(document).ready(function () {

        $('#dtini').mask('00/00/0000', { placeholder: "dd/mm/aaaa" });
        $('#dtfim').mask('00/00/0000', { placeholder: "dd/mm/aaaa" });

        //Date picker
        $('#dtini').datepicker({
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "pt-BR"
        })

        //Date picker
        $('#dtfim').datepicker({
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "pt-BR"
        })

    });
</script>
