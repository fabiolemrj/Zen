@using X.PagedList.Mvc
@model X.PagedList.PagedList<Zen.Web.Models.TipoTinta>


@{
    ViewBag.Title = "Tipo de Tinta";
}


@using (Html.BeginForm("Index", "TipoTinta", FormMethod.Get, new { id = "formtipoTinta" }))
{
    @Html.AntiForgeryToken()
    <div class="result"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Pesquisa de Tipo de Tinta</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-md-4">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Buscar Tipo de tinta" name="filtro" value="@ViewBag.Filtro">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-info btn-flat">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>

                        </div>
                        @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-info pull-right" })

                    </div>
                </div>
                <div class="box-body">
                    <table id="tabela" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Nome</th>
                                <th class="text-center" style="width:100px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-info btn-sm" title="Editar">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger btn-sm" title="Apagar">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <div class="col-md-6">
                        @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, filtro = ViewBag.Filtro }))
                    </div>
                    <div class="col-md-6">
                        <span class="pull-right">
                            Listando registros de @Model.FirstItemOnPage a @Model.LastItemOnPage de um total de @Model.TotalItemCount
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
