
@model AdminLte2.ViewModels.UtilsViewModal.IndexViewModel
@{
    ViewBag.Title = "Apagar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.YesNo)
    <div class="box-body">
        <
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Apagar Registro</h3>
            </div>
            <div class="form-horizontal">
                <h4>Deseja realmente apagar o registro?</h4>
                <button id="btyes" onclick="funcaoYesNo(true)">Sim</button>
                <button id="btno"  onclick="funcaoYesNo(false)">Não</button>
            </div>
        </div>
    </div>

    <script>
        function funcaoYesNo(value) {
            $.ajax({
                type: "post",
                url: "/Utils/Index",
                data: { yesno: value }                

            });
        };
    </script>
}
