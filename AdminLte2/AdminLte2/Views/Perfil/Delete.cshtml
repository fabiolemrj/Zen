
@model AdminLte2.ViewModels.PerfilViewModel.DeleteViewModel
@{
    ViewBag.Title = "Apagar";
}

@using (Html.BeginForm())
{
  
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.YesNo)
    @Html.HiddenFor(m => m.Id)
    <div class="box-body">
        @Html.HiddenFor(m => m.YesNo)
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Apagar Registro</h3>
            </div>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h5>@Model.Mensagem</h5>
                @*<button id="btyes" onclick="funcaoYesNo(true)" class="btn btn-success">Sim</button>
        <button id="btno" onclick="funcaoYesNo(false)" class="btn btn-danger">Não</button>*@
                <button id="bt" type="submit" class="btn btn-success">Sim</button>
                <button id="bt2" class="btn btn-danger" onclick="history.go(-1); return false;">Não</button>
            </div>
        </div>
    </div>

    <script>
        function funcaoYesNo(value) {

            $.ajax({
                type: "post",
                url: "/Index",
                data: { yesno: value, Id: @Model.Id }

            });
        };

    </script>
}



